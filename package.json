{
  "name": "dci-ui",
  "version": "0.1.0",
  "description": "",
  "author": "Guillaume Vincent <gvincent@redhat.com>",
  "license": "Apache-2.0",
  "scripts": {
    "precommit": "npm run test:unit && lint-staged",
    "build": "npm run rcue && webpack --config webpack.prod.config.js",
    "start": "node server.js",
    "dev": "npm run rcue && webpack-dev-server --host 0.0.0.0 --port 8000",
    "rcue": "cp node_modules/patternfly/dist/img/* node_modules/rcue/dist/img/",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "ava src/**/*.test.js",
    "test:e2e": "nightwatch --config ./test/e2e/nightwatch.conf.js"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "dependencies": {
    "@uirouter/angularjs": "1.0.14",
    "angular": "1.6.9",
    "angular-ui-bootstrap": "2.5.6",
    "axios": "0.17.1",
    "balloon-css": "0.5.0",
    "copy-text-to-clipboard": "1.0.4",
    "express": "4.16.2",
    "file-saver": "1.3.3",
    "husky": "0.14.3",
    "keycloak-js": "3.4.3",
    "lodash": "4.17.5",
    "moment": "2.20.1",
    "moment-timezone": "0.5.14",
    "ng-redux": "3.5.2",
    "patternfly": "3.38.0",
    "pfdemo": "4.0.3",
    "rcue": "3.38.0",
    "redux-thunk": "2.2.0",
    "redux-ui-router": "0.7.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "browser-env": "^3.2.4",
    "chromedriver": "^2.35.0",
    "clean-webpack-plugin": "^0.1.18",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "less-loader": "^4.0.5",
    "lint-staged": "^6.1.0",
    "lodash-webpack-plugin": "^0.11.4",
    "nightwatch": "^0.9.19",
    "nock": "^9.1.6",
    "node-sass": "^4.7.2",
    "prettier": "^1.10.2",
    "raw-loader": "^0.5.1",
    "redux-mock-store": "^1.5.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.1"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
