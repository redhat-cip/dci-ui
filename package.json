{
  "name": "dci-ui",
  "version": "0.1.0",
  "description": "DCI static web app",
  "private": true,
  "author": "Guillaume Vincent <gvincent@redhat.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-cip/dci-ui"
  },
  "scripts": {
    "precommit": "npm run test:unit && lint-staged",
    "build": "webpack --config webpack.prod.js",
    "start": "webpack-dev-server --host 0.0.0.0 --port 8000 --config webpack.dev.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "ava 'src/**/*.test.js'",
    "test:e2e": "nightwatch --config ./test/e2e/nightwatch.conf.js"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.18",
    "angular": "^1.7.0",
    "angular-ui-bootstrap": "2.5.6",
    "axios": "0.18.0",
    "balloon-css": "0.5.0",
    "copy-text-to-clipboard": "1.0.4",
    "file-saver": "1.3.8",
    "filesize": "3.6.1",
    "husky": "0.14.3",
    "keycloak-js": "3.4.3",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.17",
    "ng-redux": "4.0.3",
    "normalizr": "^3.2.4",
    "object.values": "^1.0.4",
    "patternfly": "^3.48.1",
    "patternfly-react": "^2.4.1",
    "pfdemo": "4.0.3",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "react2angular": "^4.0.2",
    "redux-saga": "^0.16.0",
    "redux-thunk": "2.2.0",
    "redux-ui-router": "0.7.2",
    "styled-components": "^3.3.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "chromedriver": "^2.38.3",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^3.2.0",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.1.2",
    "lodash-webpack-plugin": "^0.11.5",
    "nightwatch": "^0.9.20",
    "nock": "^9.2.6",
    "node-sass": "^4.9.0",
    "prettier": "^1.12.1",
    "raw-loader": "^0.5.1",
    "redux-mock-store": "^1.5.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.1"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "./test/localStorageMock.js"
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
