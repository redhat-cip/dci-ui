{
  "name": "dci-ui",
  "version": "0.1.0",
  "description": "",
  "author": "Guillaume Vincent <gvincent@redhat.com>",
  "license": "Apache-2.0",
  "scripts": {
    "precommit": "npm run test:unit && lint-staged",
    "build": "npm run rcue && webpack --config webpack.prod.config.js",
    "start": "node server.js",
    "dev": "npm run rcue && webpack-dev-server --host 0.0.0.0 --port 8000",
    "rcue": "cp node_modules/patternfly/dist/img/* node_modules/rcue/dist/img/",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "ava src/**/*.test.js",
    "test:e2e": "nightwatch --config ./test/e2e/nightwatch.conf.js"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.8",
    "angular": "^1.6.6",
    "angular-ui-bootstrap": "^2.5.0",
    "axios": "^0.16.2",
    "d3": "^4.11.0",
    "express": "^4.16.2",
    "file-saver": "^1.3.3",
    "husky": "^0.14.3",
    "lodash": "^4.17.4",
    "moment": "2.18.1",
    "moment-timezone": "^0.5.13",
    "ng-redux": "^3.5.1",
    "patternfly": "^3.27.7",
    "rcue": "^3.25.1",
    "redux-thunk": "^2.2.0",
    "redux-ui-router": "^0.7.2"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "browser-env": "^3.2.1",
    "chromedriver": "^2.33.1",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "less-loader": "^4.0.5",
    "lint-staged": "^4.2.3",
    "lodash-webpack-plugin": "^0.11.4",
    "nightwatch": "^0.9.16",
    "nock": "^9.0.22",
    "node-sass": "^4.5.3",
    "prettier": "^1.7.4",
    "raw-loader": "^0.5.1",
    "redux-mock-store": "^1.3.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
