{
  "name": "dci-ui",
  "version": "0.1.0",
  "description": "DCI static web app",
  "private": true,
  "author": "Guillaume Vincent <gvincent@redhat.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-cip/dci-ui"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@patternfly/patternfly-next": "^1.0.68",
    "@patternfly/react-core": "^1.30.2",
    "@patternfly/react-icons": "^2.7.0",
    "@patternfly/react-tokens": "^1.7.0",
    "axios": "^0.18.0",
    "balloon-css": "^0.5.0",
    "c3": "^0.6.7",
    "d3": "^5.7.0",
    "file-saver": "^2.0.0",
    "formsy-react": "^1.1.5",
    "keycloak-js": "^4.5.0",
    "lodash": "^4.17.10",
    "moment-timezone": "^0.5.23",
    "normalizr": "^3.2.4",
    "patternfly": "^3.54.2",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "react": "^16.5.0",
    "react-c3js": "^0.1.20",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.5.0",
    "react-redux": "^5.1.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "styled-components": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "lint-staged": "^8.0.4",
    "mini-css-extract-plugin": "^0.4.2",
    "prettier": "^1.14.2",
    "raw-loader": "^0.5.1",
    "redux-mock-store": "^1.5.3",
    "style-loader": "^0.23.0",
    "terser-webpack-plugin": "^1.1.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4"
  },
  "scripts": {
    "prettier": "prettier --write \"{src,__{tests,mocks}__}/**/*.js\"",
    "precommit": "npm run test && lint-staged",
    "start": "NODE_ENV=development webpack-dev-server --host 0.0.0.0 --port 8000 --config webpack.dev.js",
    "build": "NODE_ENV=production webpack --config webpack.prod.js",
    "test": "jest --env=jsdom",
    "test:watch": "jest --env=jsdom --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/jest/setupTests.js",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
